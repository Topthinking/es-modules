{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
		"baseUrl": ".",
		"module": "ES2020",
    "experimentalDecorators": true,
    "target": "ES2020",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true
  }
}
